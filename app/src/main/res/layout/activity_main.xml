<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/brown2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Recent Trips:"
        android:textColor="@color/brown4"
        android:textSize="20dp"
        />


    <ImageButton
        android:id="@+id/imageButtonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="370dp"
        android:onClick="onClickListenerSettings1"
        app:srcCompat="@drawable/ic_action_settings1"
        android:contentDescription="Button that leads to the settings" />

    <ImageButton
        android:id="@+id/imageButtonNewTrip"
        android:layout_width="60dp"
        android:layout_height="71dp"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="690dp"
        android:contentDescription="Button that leads to the new Trip Window"
        app:srcCompat="@drawable/ic_action_NewTrip"

        />

    <ListView
        android:id="@+id/listView_recent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="300dp"
        tools:listitem="@layout/list_item_layout_walk"
        />

</RelativeLayout>